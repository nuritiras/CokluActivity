<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextAdiSoyad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_marginBottom="35dp"
        android:ems="10"
        android:hint="Adı Soyadı:"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/editTextTelefon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTelefon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="71dp"
        android:ems="10"
        android:hint="Telefon No:"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/buttonDigerActivity"
        app:layout_constraintStart_toStartOf="@+id/editTextAdiSoyad"
        app:layout_constraintTop_toBottomOf="@+id/editTextAdiSoyad" />

    <Button
        android:id="@+id/buttonDigerActivity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="425dp"
        android:onClick="digerActivity"
        android:text="DİĞER ACTIVITY"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTelefon" />
</androidx.constraintlayout.widget.ConstraintLayout>